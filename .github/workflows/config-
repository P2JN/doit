# Docs for the Azure Web Apps Deploy action: https://github.com/Azure/webapps-deploy
# More GitHub Actions for Azure: https://github.com/Azure/actions

name: Build and deploy container app to Azure Web App - doit-app

on:
  push:
    branches:
      - config/#62-ci-cd
  workflow_dispatch:

jobs:
  build:
    runs-on: 'ubuntu-latest'

    steps:
    - uses: actions/checkout@v2

    - name: Set up Docker Buildx
      uses: docker/setup-buildx-action@v1

    - name: Log in to registry
      uses: docker/login-action@v1
      with:
        registry: https://ghcr.io/
        username: ${{ secrets.AzureAppService_ContainerUsername_d2e08e0ef7f141fa8575713e67412d41 }}
        password: ${{ secrets.AzureAppService_ContainerPassword_88f2d43fbcce4c0f9257dc65512d6021 }}

    - name: Build and push container image to registry
      uses: docker/build-push-action@v2
      with:
        push: true
        tags: ghcr.io/${{ secrets.AzureAppService_ContainerUsername_d2e08e0ef7f141fa8575713e67412d41 }}/doit:${{ github.sha }}
        file: ./Dockerfile

  deploy:
    runs-on: ubuntu-latest
    needs: build
    environment:
      name: 'production'
      url: ${{ steps.deploy-to-webapp.outputs.webapp-url }}

    steps:
    - name: Deploy to Azure Web App
      id: deploy-to-webapp
      uses: azure/webapps-deploy@v2
      with:
        app-name: 'doit-app'
        slot-name: 'production'
        publish-profile: ${{ secrets.AzureAppService_PublishProfile_aebea069da3140f4920198d85604f5d6 }}
        images: 'ghcr.io/${{ secrets.AzureAppService_ContainerUsername_d2e08e0ef7f141fa8575713e67412d41 }}/doit:${{ github.sha }}'